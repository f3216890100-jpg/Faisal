{
    "name": "Home Page Slider",
    "settings": [
        {
            "type": "text",
            "id": "sub-hpb-slider-text",
            "label": "Text"
        },
    ],
    "blocks": [
        {
            "type": "Home-Page-Slider",
            "name": "Home Page Slider",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "sub-hpb-slider-img",
                    "label": "Image"
