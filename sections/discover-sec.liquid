<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">
<style>
*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
.disc-sec {
    padding: 40px 0 60px;
}
.disc-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 50px;
    width: 100%;
}
.disc-col{
width: 24%;
padding: 23px;
position: relative;
    min-height: 310px;
    border-radius: 18px;
}
#col-1 {
    background: #f9f7f2;
}
#col-2 {
    background: #dbe7e7;
}
#col-3 {
    background: #f1fbcc;
}
.disc-img {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 100%;
    display: block;
    max-width: 220px;
}
.disc-flx {
    display: flex;
    justify-content: center;
    gap: 20px;
}
.disc-text {
    font-size: 28px;
    text-align: center;
    font-weight: 600;
    padding: 20px 0;
}
#text-1{
color: #454545;
}
#text-2{
color: #085A54;
}
#text-3{
color: #2f7400;
}
.disc-mobile-container{
    display: none;
}
@media screen and (max-width:767px){
  .disc-sec {
    padding: 20px 0 30px;
}
    .disc-mobile-container{
    display: block;
    padding-left: 10px;
    padding-right: 0;
}
.disc-container {
    display: none;
}
.disc-col {
    width: 100%;
    min-height: 260px;
}
.disc-text {
    font-size: 18px;
    padding: 10px 0;
}
.slick-slide{
    margin: 0 10px;
}
.swiper-button-next-de::after{
    display: none;
}
.swiper-button-prev-de::after{
    display: none;
}
.mobile-discovers-slider .swiper-button-prev-de{
    color: #454545 !important;
    bottom: 0 !important;
    top: auto;
    border: 1px solid #d9d9d9 !important;
    width: 40px;
    height: 40px;
    border-radius: 50px;
}
.mobile-discovers-slider .swiper-button-next-de{
    color: #454545 !important;
    bottom: 0 !important;
    top: auto;
    border: 1px solid #d9d9d9 !important;
    width: 40px;
    height: 40px;
    border-radius: 50px;
}
}

</style>
<section class="disc-sec">
  <div class="disc-container">
    <div class="disc-flx">
      {% for block in section.blocks %}
        <div class="disc-col" id="col-1">
          <h3 class="disc-text" id="text-1">
            {{ block.settings['sub-disc-text'] }}
          </h3>
          <div class="disc-image">
            {% if block.settings['sub-disc-img'] != blank %}
              <img src="{{ block.settings.sub-disc-img |img_url:'master' }}" alt="" class="disc-img">
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="disc-mobile-container">
    <div class="swiper mobile-discovers-slider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="disc-col" id="col-1" >
           <h3 class="disc-text" id="text-1">
            {{ block.settings['sub-disc-text'] }}
          </h3>
          <div class="disc-image">
            {% if block.settings['sub-disc-img'] != blank %}
              <img src="{{ block.settings.sub-disc-img |img_url:'master' }}" alt="" class="disc-img">
            {% endif %}
          </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination swiper-pagination-de"></div>
      <div class="swiper-button-next swiper-button-next-de">
        <i class="fa-solid fa-arrow-right"></i>
      </div>
      <div class="swiper-button-prev swiper-button-prev-de">
        <i class="fa-solid fa-arrow-left"></i>
      </div>
    </div>
  </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>


  <script>
    
  document.addEventListener("DOMContentLoaded", function () {
  new Swiper(".mobile-discovers-slider", {
    loop: true,
    slidesPerView: 1.3,
    spaceBetween: 20,
    pagination: {
      el: ".swiper-pagination-de",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next-de",
      prevEl: ".swiper-button-prev-de",
    },
  });
});
</script>

{% schema %}
{
  "name": "Discover Sec",
  "settings": [],
  "blocks": [
    {
      "type": "Discover-Sec",
      "name": "Discover Sec",
      "settings": [
        {
          "type": "color",
          "id": "box_blk_bg",
          "label": "Select Background Color",
          "default": "transparent"
        },
        {
          "type": "text",
          "id": "sub-disc-text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "sub-disc-img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Discover Sec"
    }
  ]
}
{% endschema %}
