 <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<style>
  *{
    padding: 0;
    margin: 0;
    box-sizing: border-boxs;
}
.faq-sec {
    padding-bottom: 20px;
    padding-top: 0px;
}
.faq-container {
    max-width: 850px;
    margin: 0 auto;
    width: 100%;
    padding: 0 20px
}
.faq-title {
    font-size: 40px;
    font-weight: 400;
    font-family: Family;
    margin-bottom: 30px;
    text-align: center;
}
.faq-block {
    border: 1px solid #bbb4b4;
    padding: 10px 35px;
    border-radius: 10px;
}
.faq {
    padding: 20px 0;
    border-bottom: 1px solid #cbc2c2;
}
.faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.faq-text {
    font-size: 24px;
    font-family: Family;
    font-weight: 400;
    color: #242F3F;
    opacity: 0.9;
}
.plus-icon.md.hydrated {
    font-size: 25px;
    font-weight: 800;
    color: #000;
}
.Faq-des {
    font-size: 16px;
    font-family: "Matter", sans-serif;
    font-weight: 500;
    color: #242F3F;
    opacity: .64;
    line-height: 1.6;
    padding: 15px 0;
    width: 87%;
}
.Faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-in-out;
}


.faq.active .Faq-answer {
    max-height: 500px; 
}
.faq-icon {
    transition: transform 0.5s ease-in-out;
}

.faq.active .faq-icon {
    transform: rotate(180deg);
}
@media screen and (max-width:767px){
    .faq-text {
        font-size: 20px;
    }
    .Faq-des {
        font-size: 14px;
        width: 100%;
    }
}

</style>
  <section class="faq-sec">
        <div class="faq-container">
            <h2 class="faq-title">
              {{ section.settings.sub-faq-title }}
            </h2>
            <div class="faq-block">
              {% for block in section.blocks %}
                <div class="faq">
                    <div class="faq-question">
                        <h3 class="faq-text">
                          {{ block.settings.sub-faq-text }}
                          </h3>
                        <div class="faq-icon">
                            <ion-icon name="add-outline" class="plus-icon"></ion-icon>
                        </div>
                    </div>
                    <div class="Faq-answer">
                        <p class="Faq-des">
                          {{ block.settings.sub-Faq-des }}
                        </p>
                    </div>
                </div>
             {% endfor %}
            </div>
        </div>
    </section>
      <script>
   document.addEventListener("DOMContentLoaded", function () {
    const faqs = document.querySelectorAll(".faq");

    faqs.forEach((faq) => {
        const question = faq.querySelector(".faq-question");
        const answer = faq.querySelector(".Faq-answer");
        const icon = faq.querySelector(".faq-icon ion-icon");

       
        answer.style.maxHeight = "0px";
        answer.style.overflow = "hidden";
        answer.style.transition = "max-height 0.3s ease-out";

        question.addEventListener("click", function () {
            const isActive = faq.classList.contains("active");

            
            faqs.forEach((item) => {
                if (item !== faq) {
                    item.classList.remove("active");
                    const itemAnswer = item.querySelector(".Faq-answer");
                    itemAnswer.style.maxHeight = "0px";
                    item.querySelector(".faq-icon ion-icon").setAttribute("name", "add-outline");
                }
            });

            
            if (isActive) {
                faq.classList.remove("active");
                answer.style.maxHeight = "0px";
                icon.setAttribute("name", "add-outline");
            } else {
                faq.classList.add("active");
                answer.style.maxHeight = answer.scrollHeight + "px";
                icon.setAttribute("name", "remove-outline");
            }
        });
    });
});


    </script>
{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type": "text",
        "id": "sub-faq-title",
        "label": "Text"
      },
    ],
    "blocks": [
      {
        "type": "Faqs",
        "name": "Faqs",
        "settings": [
          {
            "type": "text",
            "id": "sub-faq-text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "sub-Faq-des",
            "label": "Text"
          },
        ],
      },
    ],
    "presets": [
      {
        "name": "Faqs",
      },
    ],
  }
{% endschema %}