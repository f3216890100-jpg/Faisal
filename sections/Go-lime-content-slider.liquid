<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
>

<style>
  .custom.sec {
      padding: 50px 0;
  }
  .custom-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 40px;
      width: 100%;
  }
  .custom-text {
    font-family: Assistant, sans-serif;
    font-size: 40px;
    font-weight: 600;
    color: #454545;
            margin: 0;s
}
.custom-div {
    font-size: 20px;
    font-family: Assistant, sans-serif;
    font-weight: 500;
    color: #454545;

    padding: 20px 0;
}
.custom {
    text-decoration: none;
        color: #70bc0e;
}
.custom p {
    text-decoration: none;
    font-size: 20px;
    font-weight: 500;
    font-family: Assistant, sans-serif;
        margin: 0
}
.custom-span {
    color: #f6ae02;
}
.custom-content {
    margin-bottom: 50px;
    text-align: center;
}
  .custom-col {
      border: 1px solid #949494;
      padding: 40px;
      border-radius: 20px;
      margin: 0 auto;
      min-height: 330px;
         width: 46.5%;
  }

  .custom-logo-flx {
      display: flex;
      justify-content: space-between;
      align-items: center;
  }
  .custom-logo-div {
      display: flex;
      align-items: center;
      gap: 15px;
  }
  .custom-img {
      width: 100%;
      max-width: 80px;
  }
  .custom-logo-img {
      width: 100%;
      max-width: 40px;
  }
  .custom-desp p {
      font-size: 16px;
      font-weight: 500;
      color: #454545;
  }
  .custom-text-desp {
      padding: 25px 0;
  }
  .custom-text-desp p {
      font-size: 16px;
      font-weight: 500;
      color: #454545;
         line-height: 23px;
  }
  .owl-prev {
      position: absolute;
      top: 50%;
      left: 16%;
      border: 1px solid #D9D9D9 !important;
      width: 40px;
      height: 40px;
      border-radius: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
  }
  .owl-next {
      position: absolute;
      top: 50%;
      right: 16%;
      border: 1px solid #D9D9D9 !important;
      width: 40px;
      height: 40px;
      border-radius: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
  }
  .custom-main {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 30px;
}
.custom-im {
    width: 100%;
    max-width:110px;
    height: 100%;
    object-fit: contain;
}

  @media screen and (max-width:768px){
     .custom-container {
      padding: 0 15px;
  }
      .custom-text-desp p {
      font-size: 14px;
      line-height: 18px;
  }
  .custom-logo-img {
      max-width: 25px;
  }
  .custom-col {
      width: 100%;
      padding: 20px;
      min-height: 320px;
  }
.custom-text {
    font-family: Assistant, sans-serif;
    font-size: 24px;
    font-weight: 600;
    color: #454545;
}
.custom-main {
    gap: 20px;
}
.custom-div {
    font-size: 18px;
}
.custom p {
    font-size: 16px;
}

  }
</style>

<section class="custom sec">
  <div class="custom-container">
    <div class="custom-content">
            <h2 class="custom-text">
             {{ section.settings.custom-text}}
            </h2>
            <div class="custom-div">
              {{ section.settings.custom-div }}
            </div>
            <a href="" class="custom">
    {{ section.settings.custom}}
            </a>
        </div>
    <div class="owl-carousel vido-content-slider">
      {% for block in section.blocks %}
        <div class="item">
          <div class="custom-col">
            <div class="custom-logo-flx">
              <div class="custom-logo-div">
                <div class="custom-logo-image">
                    {% if block.settings.slider-logo-img !=blank %}
                  <img
                    src="{{ block.settings.slider-logo-img |img_url:'master' }}"
                    alt="{{ block.settings.slider-logo-img.alt | escape }}"
                    class="custom-logo-img"
                  >
                  {% endif %}
                </div>
                <div class="custom-desp">
                  <p>
                    {{ block.settings.slider-custom-desp }}
                  </p>
                </div>
              </div>
              <div class="custom-image">
                {% if block.settings.slider-custom-img !=blank %}
                <img src="{{ block.settings.slider-custom-img |img_url:'master' }}"
                     alt="{{ block.settings.slider-custom-img.alt | escape }}" class="custom-img">
                {% endif %}
              </div>
            </div>
            <div class="custom-text-desp">
              <p>
              {{ block.settings.slider-custom-text-desp }}
              </p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
      <div class="custom-main">
        <div class="custom-image">
          {% if section.settings.custom-im !=blank %}
            <img src="{{ section.settings.custom-im |img_url:'master' }}" alt="" class="custom-im">
          {% endif %}
        </div>
        <div class="custom-image">
            {% if section.settings.custom-im-1 !=blank %}
            <img src="{{ section.settings.custom-im-1 |img_url:'master' }}" alt="" class="custom-im">
          {% endif %}
        </div>
        <div class="custom-image">
            {% if section.settings.custom-im-2 !=blank %}
            <img src="{{ section.settings.custom-im-2 |img_url:'master' }}" alt="" class="custom-im">
          {% endif %}
        </div>
        <div class="custom-image">
            {% if section.settings.custom-im-3 !=blank %}
            <img src="{{ section.settings.custom-im-3 |img_url:'master' }}" alt="" class="custom-im">
          {% endif %}
        </div>
        </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
  $('.vido-content-slider').owlCarousel({
    loop: true,
    margin: 10,
    nav: true,
    dots: true,
    smartSpeed: 800,
    autoplayTimeout: 2000,
    // autoplay:true,
    responsive: {
      0: {
        items: 1,
        nav: false,
      },
      600: {
        items: 1,
        nav: false,
      },
      1000: {
        items: 1,
      },
    },
  });
</script>

