<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">
<style>
  .guides-sec {
    padding: 50px 0;
}
  .guides-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 50px;
    width: 100%;
}
.guides-con {
    text-align: center;
    margin-bottom: 50px;
}
.guides-tx {
    font-size: 40px;
    font-weight: 600;
    color: #454545;
}
.guides-flx {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
 .guides-col {
    width: 32%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.guides-img {
    width: 100%;
      height: 330px;
    object-fit: cover;
    border-radius: 22px;
}
.guides-text {
    font-size: 20px;
    font-weight: 600;
    padding: 15px 0;
    color: #454545;
}
.guides-heading {
    font-size: 14px;
    font-weight: 500;
    color: #454545;
    line-height: 20px;
    padding:0 0 15px;
}
.guides-anker {
    color: #70bc0e;
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
}
@media screen and (max-width:767px){
    .guides-sec {
    padding: 30px 0;
}
  .guides-container {
    padding: 0 20px;
}
 .guides-col {
    width: 100%;
    text-align:center;
}
}
</style>
<section class="guides-sec">
  <div class="guides-container">
    <div class="guides-con">
      <h2 class="guides-tx">
        {{ section.settings.guides-tx }}
      </h2>
    </div>
    <div class="guides-flx">
      {% for block in section.blocks %}
        <div class="guides-col">
          <div class="guides-image-content">
            <div class="guides-image">
              {% if block.settings['guides-img'] != blanks %}
                <img src="{{ block.settings.guides-img |img_url:'master' }}" alt="" class="guides-img">
              {% endif %}
            </div>
            <div class="guides-title">
              <h4 class="guides-text">
              {{ block.settings.guides-text }}
              </h4>
            </div>
          </div>
          <div class="guides-content">
            <div class="guides-heading">
              {{ block.settings['guides-heading'] }}
            </div>
            <a href="" class="guides-anker">
              {{ block.settings['guides-anker'] }}
              <i class="fas fa-chevron-right info-ideas-icn"></i>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Guides",
  "settings": [
    {
      "type": "text",
      "id": "guides-tx",
      "label": "Text"
    },
  ],
  "blocks": [
    {
      "type": "Guides",
      "name": "Guides",
      "settings": [
        {
          "type": "image_picker",
          "id": "guides-img",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "guides-text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "guides-heading",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "guides-anker",
          "label": "Text"
        },
      ],
    },
  ],
  "presets": [
    {
      "name": "Guides",
    },
  ],
}
{% endschema %}
