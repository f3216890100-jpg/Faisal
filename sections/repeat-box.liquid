<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css">
<style>
    .repeat-box-sec {
    padding: 60px 0;
}
  .repeat-box-container {
      max-width: 1400px;
      padding: 0 50px;
      width: 100%;
      margin: 0 auto;
  }
  .repeat-box-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }
  .repeat-box-title {
      text-align: center;
  }
  .repeat-box-text {
      font-size: 40px;
      color: #454545;
      font-weight: 600;
  }
  .repeat-box-desp p {
      font-size: 20px;
      color: #454545;
      font-weight: 500;
      padding-top: 20px;
      padding-bottom: 30px;
      width: 65%;
      margin: 0 auto;
      line-height: 30px;
  }

  .repeat-box-flx
   {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
  }
  .repeat-box-col {
      width: 32%;
      text-align: center;
  }
  .repeat-box-content{
      padding-top: 30px;
  }
  .repeat-box-content p {
      font-size: 20px;
      color: #454545;
      font-weight: 500;
      width: 95%;
      line-height: 26px;
  }
  .repeat-box-mobile-container{
  display: none;
  }
  @media screen and (max-width:767px){
        .repeat-box-sec {
    padding: 30px 0;
} 
    .repeat-box-container {
      display: none;
  }
  .repeat-box-flx {
      display: flex;
      flex-direction: column;
  }
  .repeat-box-col {
      width: 100%;
  }
  .repeat-box-content p {
      font-size: 20px;
      width: 100%;
  }
  .repeat-box-mobile-container{
  display: block;
      padding: 0 20px;
  }

      .repeat-box-content p {
          font-size: 18px;
          width: 100%;
      }
  .repeat-box-desp p {
              font-size: 18px;
      padding-top: 10px;
      padding-bottom: 20px;
      width: 100%;
      line-height: 24px;
  }
  .repeat-box-text {
      font-size: 24px;
  }
  }
</style>

<section class="repeat-box-sec">
  <div class="repeat-box-container">
    <div class="repeat-box-title">
      <h2 class="repeat-box-text">
        {{ section.settings['sub-repeat-box-text'] }}
      </h2>
      <div class="repeat-box-desp">
        {{ section.settings['sub-repeat-box-desp'] }}
      </div>
    </div>
    <div class="repeat-box-flx">
      {% for block in section.blocks %}
        <div class="repeat-box-col">
          <div class="repeat-box-image">
            {% if block.settings['sub-repeat-box-img'] != blank %}
              <img src="{{ block.settings.sub-repeat-box-img |img_url:'master' }}" alt="" class="repeat-box-img">
            {% endif %}
          </div>
          <div class="repeat-box-content">
            {{ block.settings['sub-repeat-box-content'] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="repeat-box-mobile-container">
    <div class="repeat-box-title">
      <h2 class="repeat-box-text">How Does Go Lime Work?</h2>
      <div class="repeat-box-desp">
            {{ block.settings['sub-repeat-box-content'] }}
      </div>
    </div>
    <div class="repeat-box">
        {% for block in section.blocks %}
      <div class="repeat-box-col">
        <div class="repeat-box-image">
              {% if block.settings['sub-repeat-box-img'] != blank %}
              <img src="{{ block.settings.sub-repeat-box-img |img_url:'master' }}" alt="" class="repeat-box-img">
            {% endif %}
        </div>
        <div class="repeat-box-content">
          <p>
            Browse our online store anytime to find energy-efficient heating and cooling solutions with transparent
            pricing. No hidden fees, just straightforward comfort.
          </p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.js"></script>

<script>
  $('.repeat-box').slick({
    dots: false,
    infinite: false,
    speed: 300,
    responsive: [
      { breakpoint: 767, settings: { slidesToShow: 2, slidesToScroll: 1 } },
      { breakpoint: 480, settings: { slidesToShow: 1, slidesToScroll: 1 } },
    ],
  });
</script>

{% schema %}
{
  "name": "Repeat Box",
  "settings": [
    {
      "type": "text",
      "id": "sub-repeat-box-text",
      "label": "Text"
    },
    {
      "type": "richtext",
      "id": "sub-repeat-box-desp",
      "label": "Para"
    }
  ],
  "blocks": [
    {
      "type": "Repeat-Box",
      "name": "Repeat Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "sub-repeat-box-img",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "sub-repeat-box-content",
          "label": "Para"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Repeat Box"
    }
  ]
}
{% endschema %}
