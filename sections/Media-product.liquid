<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
<style>
    .media-prod-sec {
    padding: 50px 0;
}
    .media-prod-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 50px;
    width: 100%;
}
.media-prod-title {
    font-size: 40px;
    font-weight: 600;
    color: #454545;
    margin: 0;
    text-align:center;
        padding: 0 0 50px;
}
    .media-prod-flx {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.media-prod-col {
    width: 32%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.media-prod-img {
    width: 100%;
    height: 230px;
    object-fit: contain;
    max-width: 230px;
}
.media-text-anker
 {
    text-decoration: none;
    text-align: center;
    display: inline-block;
    width: 60%;
}
.media-prod-content {
    padding: 20px 0;
}
.media-prod-text {
    font-size: 20px;
    font-weight: 600;
    color: #454545;
        margin: 0;
}

.media-prod-price {
    padding: 10px 0 0;
}
.media-prod-span {
    font-size: 14px;
    font-weight: 500;
    color: #454545;
}
.media-prod-button {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.media-prod-anker {
    background: #085a54;
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    padding: 8px 30px;
    border-radius: 50px;
    display: inline-block;
}
.media-prod-btn {
    font-size: 16px;
    font-weight: 600;
    color: #7bcb1f;
    padding-top: 25px;
    text-align: center;
    display: flex;
    align-items: center;
    gap: 5px;
    text-decoration: none;
}
@media screen and (max-width:767px){
   .media-prod-container {
    padding: 0 20px;
}
    .media-prod-col {
    width: 100%;
}
.media-text-anker {
    width: 100%;
}
.media-prod-text {
    font-size: 18px;
}
.media-prod-title {
    font-size: 25px;
    padding: 0 0 25px;
}
}
</style>
<section class="media-prod-sec">
    <div class="media-prod-container">
        <h2 class="media-prod-title">
            {{ section.settings.media-prod-title }}
        </h2>
        <div class="media-prod-flx">
            {% for block in section.blocks %}
                 {% assign product = all_products[block.settings.custom_prod] %}
            <div class="media-prod-col">
                <a href="{{ product.url }}" class="media-prod-image">
                    {% if block.settings.media-prod-img !=blank %}
                    <img src="{{ product.featured_image |img_url:'master' }}" alt="{{ product.title }}" class="media-prod-img">
                    {% endif %}
                </a>
                <div class="media-prod-content">
                    <a href="{{ product.url }}" class="media-text-anker">
                        <h3 class="media-prod-text">
                            {{ block.settings.media-prod-text }}
                        </h3>
                    </a>
                    <div class="media-prod-price">
                        <span class="media-prod-span">
                            {{ block.settings.media-prod-span }}
                        </span>
                    </div>
                </div>
                <div class="media-prod-button">
                <a href="{{ product.url }}" class="media-prod-anker">
                 {{ block.settings.media-prod-anker }}
                </a>
                    <a href="{{ product.url }}" class="media-prod-btn">
                         {{ block.settings.media-prod-btn }}
                        <i class="fa-solid fa-chevron-right">
                           
                        </i>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Media Product",
    "settings": [
        {
            "type": "text",
            "id": "media-prod-title",
            "label": "Text"
        },
    ],
    "blocks": [
       
        {
            "type": "Media-Product",
            "name": "Media Product",
            "settings": [
                 {
            "type": "product",
            "id": "custom_prod",
            "label": "Select Product"
        },
                {
                    "type": "url",
                    "id": "media-anker",
                    "label": "Product Anker"
                },
                {
                    "type": "image_picker",
                    "id": "media-prod-img",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "media-prod-text",
                    "label": "Text"
                },
                 {
                    "type": "text",
                    "id": "media-prod-span",
                    "label": "Text"
                },
                 {
                    "type": "text",
                    "id": "media-prod-anker",
                    "label": "Text"
                },
                 {
                    "type": "text",
                    "id": "media-prod-btn",
                    "label": "Text"
                },
            ],
        },
    ],
    "presets": [
        {
            "name": "Media Product",
        },
    ],
}
{% endschema %}