</svg>
                            </div>
                           <div class="card-span-flx">
                            <span class="card-span">
                                    {{ block.settings.sub-card-span }}
                            </span>
                            </div>
                        </div>
                        <div class="card-text-flx">
                            <h3 class="card-text">
                                    {{ block.settings.sub-card-text }}
                            </h3>
                            <p class="card-des">
                              {{ block.settings.sub-card-des }}
                            </p>
                            <p class="card-button">
                              {{ block.settings.sub-card-button }}
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
