<style>
  *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
.card-sec {
    padding: 30px 0;
}
.csrd-conatiner {
    padding: 0 15px;
}
.csrd-conatiner {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
}
.card-flex {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    row-gap: 15px;
}
.card-col {
    width: 32%;
    background: #e9f4f3;
    border-radius: 15px;
}
.card-row {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}
.card-image {
    display: flex;
    justify-content: center;
        margin-bottom: 15px;
}
.card-img {
    width: 100%;
    height: 100%;
    max-width: 300px;
    object-fit: cover;
}


.card-btn.flx {
    display: flex;
    justify-content: center;
    align-items: center;
        margin-bottom: 25px;
}
.card-span {
    font-size: 12px;
    font-family: "Styrene B YFood Web", sans-serif;
        display: flex;
    align-items: center;
}
.card-span-flx {
    background: #c5dfc9;
    padding: 6px 13px;
    margin-left: 10px;
    border-radius: 20px;
    display: flex;
}
svg.icon.icon-vegan {
    max-width: 100%;
     margin-left: 10px;
}
.card-text-flx {
    text-align: center;
    position: relative;
    margin-bottom: 25px;
}
.card-text {
    font-size: 24px;
    font-family: "Eddge Bold", sans-serif;
    font-weight: 700;
    padding-bottom: 10px;
}
.card-des {
    font-size: 17px;
    font-family: system-ui;
    font-weight: 400;
    margin-bottom: 10px;
         transition:  0.3s ease-in-out;
}
.card-button {
    font-size: 16px;
    font-family: system-ui;
    background: #002b26;
    padding: 14px;
    color: #fff;
    width: 88%;
        margin: 30px auto;
    border-radius: 10px;
        transition:  0.3s ease-in-out;
           top: 24px;
    left: 20px;
    position: absolute;
    opacity: 0
}
.card-row:hover .card-button{
    opacity: 1;
} 
.card-row:hover .card-des{
    opacity: 0;
}



@media screen and (max-width:767px){
    .card-col {
    width: 100%;
}

.card-des{
    opacity: 1;
}
.card-des {
    font-size: 14px;
}
h3.card-text {
    font-size: 22px;
}

.card-des{
    opacity: 1;
            margin-top: 10px;
}
.card-button{
        opacity: 1;
        position: inherit;
        left: 0;
               top: 14px;
}

}

</style>
    <section class="card-sec">
        <div class="csrd-conatiner">
            <div class="card-flex">
              {% for block in section.blocks %}
                <div class="card-col">
                    <div class="card-row">
                        <div class="card-image">
                          {% if block.settings.sub-card-img !=blank%}
                            <img src="{{ block.settings.sub-card-img |img_url:'master' }}" alt="" class="card-img |img">
                            {% endif %}
                        </div>
                        <div class="card-btn flx">
                            <div class="card-span-flx">
                            <span class="card-span">
                              {{ block.settings.sub-card-span }}
                            </span>
                            </div>
                           <div class="card-span-flx">
                            <span class="card-span">
                                    {{ block.settings.sub-card-span }}
                            </span>
                            <svg class="icon icon-vegan" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
