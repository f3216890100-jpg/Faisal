<style>
  .cst-coffe-footer {
       padding-top: 30px;
    padding-bottom: 30px;
}

.cst-coffe-fotr-container {
    max-width: 1300px;
    margin: 0 auto;
    width: 100%;
    padding: 0 60px;
}
.cst-coffe-flx {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.cst-coffe-logo {
    width: 19%;
}
.cst-coffe-logo-img {
    width: 100%;
    max-width: 115px;
}
.cst-coffe-fotr-row {
    width: 37%;
    display: flex;
}
.cst-coffe-fotr-row .cst-coffe-colume{
    width: 50%;
}
.cst-coffe-text {
    font-size: 18px;
    font-family: "Changa One", sans-serif;
    color: #0a264a;
    letter-spacing: 1px;
    margin-bottom: 20px;
      font-weight: 700;

}
.cst-coffe-list {
    list-style: none;
      margin-bottom: 8px;
}
.cst-coffe-fotr-link {
    text-decoration: none;
    color: #444444;
    font-family: "Open Sans", sans-serif;
    font-size: 17px;
    transition: all 0.3s ease-in-out;
}
.cst-coffe-fotr-link:hover{
    color: #d86145 ;
}
.cst-coffe-footer-social-link {
    width: 19%;
}
.cst-social-img {
    width: 100%;
    max-width: 20px;
}   
.cst-social-list {
    list-style: none;
    background: #75b9b7;
    width: 30px;
    height: 30px;
       margin-bottom: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
   border-radius: 3px;
     transition: all 0.3s ease-in-out;
}
.cst-social-list:hover{
 background-color: #0a264a;
}
.cst-footer-nav-column:last-child {
    width: 25%;
}
.cst-tick-image {
    width: 100%;
    max-width: 30px;
}
.cst-upper-trust-card {
    padding: 20px;
    border: 1px solid #75b9b7;
    box-shadow: 0 0 0 4px #efede6, 0 0 0 6px #75b9b7;
        /* max-width: 290px; */
        border-radius: 5px;
}
.cst-upper-trust-image {
    text-align: center;
}
.csttrust-card-grid {
    text-align: center;
    margin-bottom: 15px;
}
.account-img {
    width: 100%;
    max-width: 50px;
    filter: saturate(0);
        margin-left: 10px;
        transition: all 0.3s ease-in-out;
}
 .account-img:hover {
    filter: saturate(1);
}

.trust-card-title {
    font-weight: 400;
    font-size: 16px;
    font-family: "Changa One", sans-serif;
    color: #75b9b7;
    text-align: center;
    margin-top: 6px;
    margin-bottom: 25px;
}
.text-block-7 {
    font-size: 12px;
    font-family: "Open Sans", sans-serif;
    color: #0a264a;
    text-align: center;
        letter-spacing: 1px;
        line-height: 20px;
            width: 95%;
      margin: 40px auto 0;
}
.text-link {
    color: #d86145;
    text-decoration: none;
       
}
