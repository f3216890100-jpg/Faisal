 <footer class="cst-coffe-footer">
        <div class="cst-coffe-fotr-container">
            <div class="cst-coffe-flx">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'image' %}
                <div class="cst-coffe-logo">
                  {% if block.settings.sub-cst-coffe-logo-img !=blank%}
                    <img src="{{ block.settings.sub-cst-coffe-logo-img |img_url:'master' }}" alt="" class="cst-coffe-logo-img">
                    {% endif %}
                </div>
                  {% endcase %}
              {% endfor %}
                <div class="cst-coffe-fotr-row">
                  {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'link' %}
                    <div class="cst-coffe-colume">
                        <h2 class="cst-coffe-text">
                          {{ block.settings.sub-cst-coffe-text }}
                        </h2>
                        <ul class="cst-coffe-menu">
                          {% for link in linklists[block.settings.sub-cst-coffe-menu].links %}
                            <li class="cst-coffe-list">
                                <a href="{{ link.url }}" class="cst-coffe-fotr-link">
                                  {{ link.title }}
                                </a>
                            </li>
                           {% endfor %}
                        </ul>
                    </div>
                  {% endcase %}
                  {% endfor %}
                    
                </div>
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'social-link' %}
                <div class="cst-coffe-footer-social-link">
                     <h2 class="cst-coffe-text">
                       {{ block.settings.sub-cst-coffe-text }}
                     </h2>
                    <ul class="sct-social-menu">
                      {% if block.settings.sub-cst-social-img !=blank%}
                        <li class="cst-social-list">
                            <img src="{{ block.settings.sub-cst-social-img |img_url:'master' }}" alt="" class="cst-social-img">
                        </li>
                      {% endif %}
                {% if block.settings.sub-cst-social-img-1 !=blank%}
                        <li class="cst-social-list">
                            <img src="{{ block.settings.sub-cst-social-img-1 |img_url:'master' }}" alt="" class="cst-social-img">
                        </li>
                      {% endif %}
                {% if block.settings.sub-cst-social-img-2 !=blank%}
                        <li class="cst-social-list">
                            <img src="{{ block.settings.sub-cst-social-img-2 |img_url:'master' }}" alt="" class="cst-social-img">
                        </li>
                      {% endif %}
                 {% if block.settings.sub-cst-social-img-3 !=blank%}
                        <li class="cst-social-list">
                            <img src="{{ block.settings.sub-cst-social-img-3 |img_url:'master' }}" alt="" class="cst-social-img">
                        </li>
                      {% endif %}
                    </ul>
                </div>
              {% endcase %}
              {% endfor %}
                <div class="cst-footer-nav-column">
                  {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'box-link' %}
         <div class="cst-upper-trust-card">
           <div class="cst-upper-trust-image">
             {% if block.settings.sub-cst-tick-image !=blank%}
             <img src="{{ block.settings.sub-cst-tick-image |img_url:'master' }}" class="cst-tick-image">
             {% endif %}
           </div>
           <div class="trust-card-title">
             {{ block.settings.sub-trust-card-title }}
           </div>
           <div class="csttrust-card-grid">
             {% if block.settings.sub-account-img !=blank%}
             <img src="{{ block.settings.sub-account-img |img_url:'master' }}" class="account-img">
               {% endif %}
                      {% if block.settings.sub-account-img-1 !=blank%}
             <img src="{{ block.settings.sub-account-img-1 |img_url:'master' }}" class="account-img">
                        {% endif %}
                      {% if block.settings.sub-account-img-2 !=blank%}
             <img src="{{ block.settings.sub-account-img-2 |img_url:'master' }}" class="account-img">
             {% endif %}
           </div>
           <div class="text-block-7">
             {{ block.settings.sub-text-block-7 }}
             <a href="#" class="text-link">
               {{ block.settings.sub-text-link }}
             </a>
            ‚Äç</div>
         </div>
                  {% endcase %}
                  {% endfor %}
        </div>
            </div>
        </div>
    </footer>
