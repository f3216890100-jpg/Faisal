<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.css">

<style>
  .hp-sellar-sec{
      padding: 50px 0;
  }
  .hp-seller-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 50px;
      width: 100%;
  }
  .hp-seller-mobile-container{
      display: none;
  }
  .hp-seller-title {
      font-size: 40px;
      font-weight: 600;
      color: #454545;
      margin-bottom: 30px;
         text-align: center;
  }
  .hp-seller-flx {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
  }
  .hp-seller-col {
      width: 32%;
      padding: 20px;
      background: none;
      text-align: center;
      transition: all .3s ease-in-out;
      border-radius: 20px;
  }
  .hp-seller-col:hover{
      background: #f9f7f2;
  }
  .hp-seller-img {
      width: 100%;
      height: 200px;
      max-width: 200px;
  }
  .hp-sellar-content {
      text-decoration: none;
  }
  .hp-seller-text {
      font-size: 20px;
      font-weight: 600;
      color: #454545;
      width: 90%;
      text-align: center;
          line-height: 30px;
  }
  .hp-seller-price-span {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin: 10px 0;
  }
  .hp-seller-price-1 {
      color: #70bc0e;
      font-size: 20px;
      font-weight: 500;
  }
  .hp-seller-price-2 {
      color: #454545;
      font-size: 20px;
      font-weight: 500;
      text-decoration: line-through;
  }
  .hp-seller-btn {
      background: #085a54;
      font-size: 16px;
      color: #fff;
      text-decoration: none;
      padding: 10px 25px;
      display: inline-block;
      border-radius: 50px;
  }
  .hp-seller-button-div {
      margin-top: 10px;
  }
  .hp-seller-button {
      font-size: 16px;
      color: #70bc0e;
          text-decoration: none;
  }
  @media screen and (max-width:767px){
     .hp-sellar-sec{
      padding: 30px 0;
  }
      .hp-seller-container {
  display: none;
  }
  .hp-seller-mobile-container{
      display: block;
          padding: 0 20px;
  }
  .hp-seller-col{
      width: 100%;
          padding: 15px;
  }
  .hp-seller-text{
      font-size: 16px;
      width: 100%;
      line-height: 20px;
  }
  .hp-seller-btn {
      font-size: 14px;
  }
  .hp-seller-price-1 {
      font-size: 18px;
  }
  .hp-seller-price-2 {
      font-size: 18px;
  }
  .hp-seller-title {
      font-size: 24px;
      margin-bottom: 20px;
  }
  }
</style>
<section class="hp-sellar-sec">
  <div class="hp-seller-container">
    <div class="hp-seller-title">
      {{ section.settings['sub-hp-seller-title'] }}
    </div>

    <div class="hp-seller-flx">
      {% for block in section.blocks %}
        <div class="hp-seller-col">
          <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-sellar-image">
            {% if block.settings['sub-hp-seller-img'] != blank %}
              <img src="{{ block.settings.sub-hp-seller-img |img_url:'master' }}" alt="" class="hp-seller-img">
            {% endif %}
          </a>
          <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-sellar-content">
            <h3 class="hp-seller-text">
              {{ block.settings['sub-hp-seller-text'] }}
            </h3>
          </a>
          <div class="hp-seller-price">
            <span class="hp-seller-price-span">
              <span class="hp-seller-price-1">
                {{ block.settings['sub-hp-seller-price-1'] }}
              </span>
              <span class="hp-seller-price-2">
                {{ block.settings['sub-hp-seller-price-2'] }}
              </span>
            </span>
          </div>
          <div class="hp-seller-btn-div">
            <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-seller-btn">
              {{ block.settings['sub-hp-seller-btn'] }}
            </a>
          </div>
          <div class="hp-seller-button-div">
            <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-seller-button">
              {{ block.settings['sub-hp-seller-button'] }}
              <i class="fa-solid fa-chevron-right"> </i>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="hp-seller-mobile-container">
    <div class="hp-seller-title">
      {{ section.settings['sub-hp-seller-title'] }}
    </div>
    <div class="hp-seller-slider">
      {% for block in section.blocks %}
        <div class="hp-seller-col">
          <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-sellar-image">
            {% if block.settings['sub-hp-seller-img'] != blank %}
              <img src="{{ block.settings.sub-hp-seller-img |img_url:'master' }}" alt="" class="hp-seller-img">
            {% endif %}
          </a>
          <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-sellar-content">
            <h3 class="hp-seller-text">
              {{ block.settings['sub-hp-seller-text'] }}
            </h3>
          </a>
          <div class="hp-seller-price">
            <span class="hp-seller-price-span">
              <span class="hp-seller-price-1">
                {{ block.settings['sub-hp-seller-price-1'] }}
              </span>
              <span class="hp-seller-price-2">
                {{ block.settings['sub-hp-seller-price-2'] }}
              </span>
            </span>
          </div>
          <div class="hp-seller-btn-div">
            <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-seller-btn">
              {{ block.settings['sub-hp-seller-btn'] }}
            </a>
          </div>
          <div class="hp-seller-button-div">
            <a href="{{ block.settings.sub-hp-seller-anker }}" class="hp-seller-button">
              {{ block.settings['sub-hp-seller-button'] }}
              <i class="fa-solid fa-chevron-right"> </i>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>

    <script>
    $(function() {
      $('.hp-seller-slider').slick({
        arrows: false,
        dots: false,
        speed: 1000,
        autoplay: true,
        autoplaySpeed: 2000,
        infinite: true,
          responsive: [
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 1.5,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1.5,
        slidesToScroll: 1
      }
    }
  
  ]
      });
      
    });
  </script>

{% schema %}
{
  "name": "Lime Seller",
  "settings": [
    {
      "type": "richtext",
      "id": "sub-hp-seller-title",
      "label": "Text"
    },
  ],
  "blocks": [
    {
      "type": "Lime-Seller",
      "name": "Lime Seller",
      "settings": [
        {
          "type": "url",
          "id": "sub-hp-seller-anker",
          "label": "Seller Anker"
        },
        {
          "type": "image_picker",
          "id": "sub-hp-seller-img",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "sub-hp-seller-text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "sub-hp-seller-price-1",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "sub-hp-seller-price-2",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "sub-hp-seller-btn",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "sub-hp-seller-button",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lime Seller"
    }
  ]
}
{% endschema %}
