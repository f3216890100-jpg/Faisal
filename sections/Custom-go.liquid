<style>
      *{
      padding: 0;
      margin: 0;
      box-sizing: border-box;
  }
.custom-go-sec {
    padding: 130px 0 50px;
}
  .custom-go-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 50px;
      width: 100%;
  }

  .custom-go-box {
      text-align: center;
  }
  .custom-go-img {
      width: 100%;
      height: 100%;
      max-width: 50px;
      object-fit: cover;
  }
  .custom-go-content {
      margin-top: 30px;
  }
  .custom-go-text {
      font-size: 40px;
      font-family: Assistant, sans-serif;
      font-weight: 600;
      color: #454545;
  }
  .custom-go-desp p {
      font-size: 20px;
      font-family: Assistant, sans-serif;
      font-weight: 500;
      color: #454545;
      padding-top: 20px;
      width: 95%;
          line-height: 26px;
  }
  @media screen and (max-width:767px){

  .custom-go-container {
      padding: 0 20px;
  }
      .custom-go-text {
      font-size: 24px;
  }
  .custom-go-content {
      margin-top: 20px;
  }
  .custom-go-desp p {
      font-size: 18px;
      width: 100%;
      padding-top: 15px;
      line-height: 24px;
  }
  }
</style>
<section class="custom-go-sec">
  <div class="custom-go-container">
    <div class="custom-go-box">
      <div class="custom-go-image">
        {% if section.settings['sub-custom-go-img'] != blank %}
          <img src="{{ section.settings.sub-custom-go-img |img_url:'master' }}" alt="" class="custom-go-img">
        {% endif %}
      </div>
      <div class="custom-go-content">
        <h1 class="custom-go-text">
          {{ section.settings['sub-custom-go-text'] }}
        </h1>
        <div class="custom-go-desp">
          {{ section.settings['sub-custom-go-desp'] }}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
    "name": "Custom Go",
    "settings": [
        {
            "type": "image_picker",
            "id": "sub-custom-go-img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "sub-custom-go-text",
            "label": "Text"
        },
          {
            "type": "richtext",
            "id": "sub-custom-go-desp",
            "label": "Para"
        },
    ],
    "presets": [
        {
            "name": "Custom Go"
        },
    ],
}
{% endschema %}
