            <a href="#" class="title-anker">
              {{ section.settings.title-anker-1 }}
              <i class="fa-solid fa-chevron-right zing-rightleft"></i>
            </a>
          </div>
        </div>
        <div class="title-content-flx">
          <div class="title-content-image">
             {% if section.settings.title-content-img-4 !=blank %}
            <img src="{{ section.settings.title-content-img-4 |img_url:'master' }}" alt="" class="title-content-img">
            {% endif %}
          </div>
          <div class="title-content">
            <h3 class="title-heading">{{ section.settings.title-heading-4 }}</h3>
            <div class="title-desp">
