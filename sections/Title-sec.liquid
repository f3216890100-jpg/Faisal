<style>
      *{
      padding: 0;
      margin: 0;
      box-sizing: border-boxs;
  }
  .title-sec{
  background: #e4f0e1;
  padding: 60px 0;
  }
  .title-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 50px;
  }
  .title-link {
      text-align: center;
      padding-bottom: 50px;
   width: 63%;
      margin: 0 auto;
  }
  .title-btn {
      background: #b8d9b0;
      font-size: 16px;
      padding: 10px 15px;
      display: inline-block;
      border-radius: 50px;
      margin-bottom: 20px;
      text-decoration: none;
      color: #454545;
          font-family: Assistant, sans-serif;
  }
  .title {
      font-size: 28px;
      font-family: Assistant, sans-serif;
      font-weight: 600;
      padding-bottom: 10px;
      color: #454545;
  }
  .title-des p {
      font-size: 18px;
      font-family: Assistant, sans-serif;
      font-weight: 500;
      line-height: 22px;
  }

  .title-flx {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
  }
  .title-col {
      width: 45%;
  }
  .title-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }
  .title-content-col {
      width: 52%;
  }
  .title-content-img {
     max-width: 25px;
     height: 25px;
      object-fit: cover;
  }
  .title-content {
      margin-bottom: 20px;
  }
  .title-heading {
      font-size: 16px;
      color: #454545;
      font-family: Assistant, sans-serif;
      padding-bottom: 10px;
          font-weight: 600;
  }
  .title-desp p {
      font-size: 14px;
      color: #454545;
       font-family: Assistant, sans-serif;
       font-weight: 500;
       padding-bottom: 10px;
  }
  .title-content-flx {
      display: flex;
      gap: 20px;
  }
  .title-anker {
      color: #70bc0e;
      font-size: 14px;
        font-family: Assistant, sans-serif;
        text-decoration: none;
           font-weight: 600;
  }
  @media screen and (max-width:767px){
     .title-sec {
      padding: 30px 0;
  }
      .title-container {
      padding: 0 20px;
  }
  .title-link {
      padding-bottom: 30px;
      width: 100%;
  }
  .title {
      font-size: 20px;
      line-height: 26px;
  }
  .title-des p {
      font-size: 16px;
      line-height: 20px;
      text-align: center;
  }

  .title-flx {
      display: flex;
      flex-direction: column;
      row-gap: 25px;
  }
      .title-col {
      width: 100%;
  }
  .title-content-col {
      width: 100%;
  }
  .title-content-flx {
      display: flex;
      gap: 10px;
  }
  .title-heading {
      font-size: 14px;
  }
  .title-anker {
      font-size: 14px;
  }
  .title-desp p {
      font-size: 14px;
      line-height: 20px;
  }
  }
</style>
<section class="title-sec">
  <div class="title-container">
    <div class="title-link">
      <a href="#" class="title-btn">
        {{ section.settings.title-btn }}
      </a>
      <h2 class="title">
        {{ section.settings.title }}
      </h2>
      <div class="title-des">
       {{ section.settings.title-des }}
      </div>
    </div>
    <div class="title-flx">
      <div class="title-col">
        <div class="title-image">
            {% if section.settings.title-img !=blank %}
          <img src="{{ section.settings.title-img |img_url:'master' }}" alt="" class="title-img">
          {% endif %}
        </div>
      </div>
      <div class="title-content-col">
        <div class="title-content-flx">
          <div class="title-content-image">
            {% if section.settings.title-content-img !=blank %}
            <img src="{{ section.settings.title-content-img |img_url:'master' }}" alt="" class="title-content-img">
            {% endif %}
          </div>
          <div class="title-content">
            <h3 class="title-heading">
                {{ section.settings.title-heading }}
            </h3>
            <div class="title-desp">
             {{ section.settings.title-desp }}
            </div>
          </div>
        </div>
        <div class="title-content-flx">
          <div class="title-content-image">
            {% if section.settings.title-content-img-1 !=blank %}
